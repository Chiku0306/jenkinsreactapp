pipeline {
    agent {
        docker {
            image 'node:14' // Use the desired Node.js version
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    environment {
        CI = 'true'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-node-app .' // Replace with your Docker build command
            }
        }
        stage('Run Tests') {
            steps {
                sh 'npm test' // Replace with your test command
            }
        }
    }
}
